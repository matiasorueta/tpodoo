<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_channel" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.channel</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="canal_venta_id" options="{'no_open': True}" required="1"/>
            </xpath>
        </field>
    </record>

    <!-- Filtro para el channel -->
<record id="view_order_search_inherit_canal" model="ir.ui.view">
    <field name="name">sale.order.search.canal</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_sales_order_filter"/>
    <field name="arch" type="xml">
        <xpath expr="//search" position="inside">
            <filter name="canal_venta" string="Canal de Venta" context="{'group_by': 'canal_venta_id'}"/>
        </xpath>
    </field>
</record>
<!-- Filtro para Ã³rdenes de entrega -->
    <record id="view_picking_search_inherit_canal" model="ir.ui.view">
        <field name="name">stock.picking.search.canal</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_internal_search"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <filter name="ordenes_entrega" string="Ordenes de entrega" domain="[('canal_venta_id','!=',False)]" context="{'group_by': 'canal_venta_id'}"/>
            </xpath>
        </field>
    </record>
    <!-- Filtro para facturas por canal -->
    <record id="view_move_search_inherit_canal" model="ir.ui.view">
        <field name="name">account.move.search.canal</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <!-- Solo agrupa los registros que tienen canal asignado -->
                <filter name="canal_venta" string="Canal de Venta"
                        domain="[('canal_venta_id','!=',False)]"
                        context="{'group_by': 'canal_venta_id'}"/>
            </xpath>
        </field>
    </record>
</odoo>
